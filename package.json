{
  "name": "codewars-start",
  "version": "0.1.0",
  "private": true,
  "description": "Educational project with Codewars solutions and React examples",
  "scripts": {
    "dev:react": "pnpm --filter react-app start",
    "build:react": "pnpm --filter react-app build",
    "test:react": "pnpm --filter react-app test",
    "dev:learning": "cd learning && pnpm dev",
    "type-check:learning": "pnpm --filter learning type-check",
    "install:all": "pnpm install --recursive",
    "clean": "pnpm --filter react-app clean && rm -rf node_modules && rm -rf learning/node_modules",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "type-check": "pnpm type-check:learning"
  },
  "devDependencies": {
    "prettier": "3.5.2",
    "prettier-plugin-jsdoc": "^1.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
